<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_shape"
        android:orientation="vertical"
        >

       <include layout="@layout/simple_toolbar"/>

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_72sdp"
            android:background="@color/tarns"
            android:padding="@dimen/_3sdp"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/logo"
                android:id="@+id/user_img"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ellipse13"
                />

            <ImageView
                android:layout_gravity="bottom|start"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/group615"
                android:id="@+id/change_user_img"
                />
        </FrameLayout>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:text="احمد محمد محمود"
            />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/library_normal_ratingbar"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_20sdp"
             android:minWidth="@dimen/_120sdp"
             android:stepSize=".5"
            android:progressDrawable="@drawable/star_3"
            android:layout_gravity="center"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_10sdp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdate_"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_7sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_birthDate"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_birth_edit"
            tools:ignore="RtlCompat" />

    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الايميل"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingStart="@dimen/_7sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_email"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_email_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_hint"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_country"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_country_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collage_hint"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_collage"
            />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_collage_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faculty_hint"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_faculty"
            />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_faculty_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feraqa_hint"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_ferqa"
            />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_ferqa_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/department_hint"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sdp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/tarns"
            android:editable="false"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_user_department"
            />
        <ImageView
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/path1281"
            android:id="@+id/img_deparment_edit"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>