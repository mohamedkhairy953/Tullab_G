<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/baby_Blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="@dimen/_10sdp"
        android:background="@color/blue"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"/>
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/group299"
    tools:ignore="RtlCompat">
    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/group398"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/support_services"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:drawableStart="@drawable/honey_moon_1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/edt_gray_shape"
        android:drawablePadding="@dimen/_17sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:id="@+id/txt_table_faculty"
        android:text="@string/reserve_trips"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:drawableStart="@drawable/house_1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/edt_gray_shape"
        android:drawablePadding="@dimen/_17sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:id="@+id/txt_learning_courses"
        android:text="@string/reserve_rooms"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:drawableStart="@drawable/cupcake_1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@drawable/edt_gray_shape"
        android:drawablePadding="@dimen/_17sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:id="@+id/txt_grwoth_courses"
        android:text="@string/oredr_foods_drinks"
        />


</LinearLayout>

</LinearLayout>