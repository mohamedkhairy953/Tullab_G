<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_5sdp"
    android:background="@color/tarns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/baby_Blue"
            android:paddingTop="@dimen/_14sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >
                <TextView
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:text="@string/prodects_services_student"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/logo"
                    />
            </LinearLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/light_Green"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:text="@string/invite_friends_hint"
            />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12sdp"
            android:text="@string/share_hint"
            />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:background="@drawable/edt_gray_shape"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:textColor="@color/Hard_Gray"
                android:text="jdjghgjfhgjfhjfhgjfhgjfhgjfhjfhg"
                />

            <Button
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:text="@string/copy_link"
                android:id="@+id/copy_link"
                android:background="@drawable/btn_share_shape"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/share_link"
                />

             <include layout="@layout/social_layout" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>